---
apiVersion: v1
kind: Service
metadata:
  name: nginx-web-service
  namespace: {{ k3s_namespace }}
spec:
  type: NodePort
  selector:
    app: nginx-web
  ports:
  - name: http
    port: 80
    targetPort: 80
    nodePort: 30080
  - name: https
    port: 443
    targetPort: 443
    nodePort: 30443
