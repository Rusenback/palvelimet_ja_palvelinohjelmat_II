// Zone for {{ domain_name }}
zone "{{ domain_name }}" {
    type master;
    file "/etc/bind/db.rainomalabra.local";
    allow-query { any; };
};

// Reverse zone for {{ network_cidr }}
zone "56.168.192.in-addr.arpa" {
    type master;
    file "/etc/bind/db.192.168.56";
    allow-query { any; };
};
