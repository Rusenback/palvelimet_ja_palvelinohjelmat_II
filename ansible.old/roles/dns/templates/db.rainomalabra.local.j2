;
; BIND data file for {{ dns_domain }}
;
$TTL    604800
@       IN      SOA     {{ dns_domain }}. admin.{{ dns_domain }}. (
                              2         ; Serial
                         604800         ; Refresh
                          86400         ; Retry
                        2419200         ; Expire
                         604800 )       ; Negative Cache TTL
;
@       IN      NS      ns.{{ dns_domain }}.
@       IN      A       {{ dns_server_ip }}
ns      IN      A       {{ dns_server_ip }}
www     IN      A       {{ dns_server_ip }}
